<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/reset.css" />
    <link rel="stylesheet" href="~/css/typography.css" />
    <link rel="stylesheet" href="~/css/admin-layout.css" />
    <link rel="stylesheet" href="~/css/admin-products.css" />
    <link rel="stylesheet" href="~/css//admin-product-add.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Exo+2:ital,wght@0,100..900;1,100..900&family=Noto+Sans:ital,wght@0,100..900;1,100..900&display=swap"
          rel="stylesheet" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <title>Document</title>
</head>
<body>
    <div class="site">
        <div class="left-side">
            <div class="logo">
                <p>VASD</p>
            </div>
            <div class="navbar">
                <a href="#" class="dashboard">Dashboard</a>
                <a asp-controller="Product" asp-action="Index" class="products">Products</a>
                <a href="#" class="customers">Customers</a>
                <a href="#" class="orders">Orders</a>
                <a href="#" class="shipments">Shipments</a>
                <a href="#" class="transactions">Transactions</a>
                <a href="#" class="settings">Settings</a>
                <a href="#" class="logout">Logout</a>
            </div>
        </div>
        <div class="right-side">
            <div class="content">
                @RenderBody()
            </div>
        </div>
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/toastr/toastr.min.js"></script>
    <script>
        toastr.options = {
            "preventDuplicates": true,
        };
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
