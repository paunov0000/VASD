@model ProductRestockViewModel

@{
    ViewBag.Title = "Restock";
}

<div class="flex flex-col gap-5 items-center"
    <div class="text-center">
        <h1>@ViewBag.Title</h1>
    </div>
    <div class="flex gap-10 justify-center">
        <div class="border border-gray-300 rounded-lg py-6">
            <form class="flex flex-col items-center gap-7" method="post">
                <div class="text-xs italic text-red-500" asp-validation-summary="ModelOnly"></div>

                <div class="flex flex-col items-center">
                    <label asp-for="@Model.Id"></label>
                    <span asp-validation-for="@Model.Id" class="text-xs italic text-red-500"></span>
                    <select class="border-gray-400 border rounded-lg px-3 py-1.5" asp-for="@Model.Id">
                        @foreach (var product in ViewBag.Products)
                        {
                            <option value="@product.Id">@(product.Name) | @(product.Quantity)</option>
                        }
                    </select>
                </div>

                <div class="flex flex-col items-center">
                    <label asp-for="@Model.Count"></label>
                    <span asp-validation-for="@Model.Count" class="text-xs italic text-red-500"></span>
                    <input asp-for="@Model.Count" class="w-2/5 border-gray-400 border rounded-lg px-3 py-1.5" type="number"/>
                </div>

                <button class="text-lg bg-amber-500 text-white rounded-lg px-3 py-1.5 hover:bg-amber-600" type="submit">Restock</button>
            </form>
        </div>
    </div>
</div>
