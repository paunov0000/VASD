@model ProductViewModel;

<div class="border-4 flex flex-col items-center justify-between gap-5 overflow-hidden rounded-3xl border-solid border-transparent hover:to-blue-500 hover:from-pink-300 hover:bg-gradient-to-b hover:border-4 hover:overflow-hidden">
    <div class="h-full w-full bg-white">

        <!-- make somehow its' children stretch to the full width or sum idk -->
        <!-- the max-w makes it obv take less than the threshold of the value given up until this value  -->
        <!-- the max-w makes it have some spare space on left and right (width) -->
        <div class="flex flex-col gap-3">
            <div>
                <a asp-controller="Product" asp-action="Details" asp-route-id="@Model.Id">
                    <div class="w-[9rem]">
                        <img class="h-[10rem] w-full" src="@Model.ImageUrl"
                             alt="Product Image" />
                    </div>
                </a>
            </div>
            <div class="text-center">
                <a asp-controller="Product" asp-action="Details" asp-route-id="@Model.Id">@Model.Name</a>
            </div>
        </div>
        <div class="text-center font-bold">
            <p>@(Model.Price) лв.</p>
        </div>
    </div>
</div>