    <div id="site">
        <header id="site-header">
            <div id="header-top">
                <p id="header-top-promo">
                    Избери перфектния подарък с до -40% и ОЩЕ -10% с код LOVE над 140
                    лв! ❤️
                </p>
                <p id="header-top-phone">+359 88 8888888</p>
            </div>
            <div id="header-mid">
                <div id="header-mid-logo">
                    <a asp-controller="Home" asp-action="Index">
                        <p id="header-mid-logo-title">VASD</p>
                        <img src="images/logo.png" alt="logo" />
                    </a>
                </div>
                <div id="header-mid-search">
                    <input type="text" placeholder="Търси продукт" />
                    <button>Търси</button>
                </div>
                <div id="header-mid-options">
                    <div id="header-mid-options-login">
                        <a asp-controller="Accounts" asp-action="Login">
                            <img src="images/login.png" alt="login" />
                            <p>Вход</p>
                        </a>
                    </div>
                    <div id="header-mid-options-cart">
                        <img src="images/cart.png" alt="cart" />
                        <p>Количка</p>
                    </div>
                </div>
            </div>
            <div id="header-bottom">
                <nav id="header-nav">
                    <ul>
                        <li><a href="#">Начало</a></li>
                        <li><a href="#">Продукти</a></li>
                        <li><a href="#">За нас</a></li>
                        <li><a href="#">Контакти</a></li>
                    </ul>
                </nav>
            </div>
        </header>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        @* <footer class="border-top footer text-muted">
