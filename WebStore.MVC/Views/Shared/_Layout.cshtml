    <header id="site-header">
        <div id="header-top">
            <p id="header-top-promo">
                Избери перфектния подарък с до -40% и ОЩЕ -10% с код LOVE над 140 лв!
                ❤️
            </p>
            <p id="header-top-phone">+359 88 8888888</p>
        </div>
        <div id="header-mid">
            <div id="header-mid-logo">
                <img src="images/logo.png" alt="logo" />
            </div>
            <div id="header-mid-search">
                <input type="text" placeholder="Търси продукт" />
                <button>Търси</button>
            </div>
            <div id="header-mid-options">
                <div id="header-mid-options-login">
                    <img src="images/login.png" alt="login" />
                    <p>Вход</p>
                </div>
                <div id="header-mid-options-cart">
                    <img src="images/cart.png" alt="cart" />
                    <p>Количка</p>
                </div>
            </div>
        </div>
        <div id="header-bottom">
            <nav id="header-nav">
                <ul>
                    <li><a href="#">Начало</a></li>
                    <li><a href="#">Продукти</a></li>
                    <li><a href="#">За нас</a></li>
                    <li><a href="#">Контакти</a></li>
                </ul>
            </nav>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @* <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @(DateTime.UtcNow.Year == 2024 ? DateTime.UtcNow.Year : $"2024 - {DateTime.UtcNow.Year}") - VASD Perfumes
        </div>
    </footer> *@

    <section id="section-clients">
        <div id="section-clients-title">
            <h1>Нашите клиенти</h1>
        </div>
        <a id="section-clients-sources" href="#">
            <div class="section-clients-sources-source">
                <figure class="section-clients-sources-source-logo-wrapper">
                    <img src="images/client1.png"
                         alt="client1"
                         class="section-clients-sources-source-logo" />
                </figure>
                <div class="section-clients-sources-source-rating">
                    <span>*</span>
                    <span>*</span>
                    <span>*</span>
                    <span>*</span>
                    <span>*</span>
                    <p>5 от 5</p>
                </div>
                <div class="section-clients-sources-source-text">
                    <p>от над 6000 реални отзива</p>
                </div>
            </div>
        </a>
    </section>
    <article id="article-subscribe">
        <div id="article-subscribe-title">
            <h1>Абонирай се за нашия бюлетин</h1>
        </div>
        <div id="article-subscribe-form">
            <form action="#">
                <input type="email" placeholder="Въведи своя имейл" />
                <button>Абонирай се</button>
            </form>
        </div>
    </article>
    <article id="article-icons">
        <div class="article-icons-element">
            <figure>
                <img src="images/icon1.png" alt="icon1" />
            </figure>
            <p>Безплатна доставка над 100 лв</p>
        </div>
        <div class="article-icons-element">
            <figure>
                <img src="images/icon2.png" alt="icon2" />
            </figure>
            <p>30 дни право на връщане</p>
        </div>
        <div class="article-icons-element">
            <figure>
                <img src="images/icon3.png" alt="icon3" />
            </figure>
            <p>Подарък за всяка поръчка</p>
        </div>
    </article>

    <footer id="site-footer">
        <div id="site-footer-top-wrapper">
            <div id="site-footer-top-wrapper-about">
                <h2>За нас</h2>
                <p>
                    Нашата мисия е да предоставим на клиентите си най-доброто качество
                    на достъпни цени. Ние сме тук, за да направим онлайн пазаруването
                    лесно и удобно за вас.
                </p>
            </div>
            <div id="site-footer-top-wrapper-links">
                <h2>Полезни линкове</h2>
                <ul>
                    <li><a href="#">Начало</a></li>
                    <li><a href="#">Продукти</a></li>
                    <li><a href="#">За нас</a></li>
                    <li><a href="#">Контакти</a></li>
                </ul>
            </div>
            <div id="site-footer-top-wrapper-contact">
                <h2>Контакти</h2>
                <p>Телефон: +359 88 8888888</p>
                <p>Имейл: office@vasd.com</p>
                <p>Адрес: гр. София, ул. "Търговска" 10</p>
            </div>
        </div>
        <div id="site-footer-mid-wrapper">
            <section id="site-footer-mid-wrapper-delivery">
                <img src="#" alt="Доставка с ЕКОНТ" />
            </section>

            <section id="site-footer-mid-wrapper-payment">
                <img src="#" alt="Плащане с карта" />
                <span> Наложен платеж </span>
            </section>
        </div>
        <div id="site-footer-bottom-wrapper">
            <p>© 2021 Всички права запазени</p>
        </div>
    </footer>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/toastr/toastr.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
