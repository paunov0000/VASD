@using WebStore.MVC.Models.Account
@model AccountLoginViewModel

@{
    Layout = null;
    ViewData["Title"] = "Вход";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"] - VASD</title>
    <link rel="stylesheet" type="text/css" href="slide navbar style.css" />
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@500&display=swap"
          rel="stylesheet" />
    <link href="~/css/reset.css" rel="stylesheet" />
    <link href="~/css/account.css" rel="stylesheet" />
    <link href="~/lib/toastr/toastr.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    @* <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" /> *@
</head>
<body>
    <partial name="_ToastrAlertMessagesPartial" />
    <div class="main">
        <!-- @* <input type="checkbox" id="chk" aria-hidden="true"> *@ -->
        <div class="signup">
            <form method="post">
                <div id="input-wrapper">
                    <label id="action-title">@ViewData["Title"]</label>
                    <!-- @* <input type="text" name="txt" placeholder="User name" required=""> *@ -->
                    @* <label asp-for="@Model.Email" class="form-label"></label> *@
                    <span asp-validation-for="@Model.Email"></span>
                    <input class="form-input"
                           asp-for="@Model.Email"
                           placeholder="Имейл" />
                    <input class="form-input"
                           asp-for="@Model.Password"
                           placeholder="Парола" />
                    <div id="register-wrapper">
                        <p>
                            Нямате акаунт?
                            <a class="register-text" href="#">Регистрация</a>
                        </p>
                    </div>
                    <div id="rememberme-wrapper">
                        <label class="form-label" for="rememberme-check">Запомни ме</label>
                        <input asp-for="@Model.RememberMe" id="rememberme-check" type="checkbox" />
                    </div>
                    <button type="submit">@ViewData["Title"]</button>
                </div>
            </form>
        </div>
    </div>
    <partial name="_ValidationScriptsPartial"></partial>
    <script src="~/lib/toastr/toastr.min.js"></script>
</body>
</html>
